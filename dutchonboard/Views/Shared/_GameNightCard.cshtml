@model ICollection<GameNight>;

@foreach (var gameNight in @Model)
{
    <div class="col col-md-6 px-5 mb-4">
        <div class="card h-100">
            <img src="~/images/card-placeholder.png" class="card-img-top mx-auto mt-2" style="width: 200px" alt="...">
            <div class="card-body d-flex flex-column">
                <div class="card-title">
                    <h4 class="pe-3">@gameNight.Title</h4>
                    @if (@gameNight.IsForAdults == true)
                    {
                        <img src="~/images/adults-warning-sign.png" width="35px" />
                    }
                </div>
                <p class="card-text">@gameNight.Description</p>
                <a asp-action="GameNightDetailPage" asp-route-id="@gameNight.Id" class="btn btn-primary btn-primary-color mt-auto mx-4">Bekijk</a>
            </div>
            @if (ViewData["ForOrganizer"] != null && ViewData["ForOrganizer"]!.Equals(true))
            {
                <a asp-action="EditGameNight" asp-route-id="@gameNight.Id">
                    <div class="card-footer bg-secondary-color border-success d-flex justify-content-center">
                        <img src="~/images/edit-icon.svg" class="white-filter" width="20px" />
                    </div>
                </a>
                <a asp-action="DeleteGameNight" asp-route-id="@gameNight.Id">       
                    <div class="card-footer bg-red border-success d-flex justify-content-center">
                        <img src="~/images/delete-icon.svg" class="white-filter" width="20px" />
                    </div>
                </a>
            }
        </div>
    </div>
}
