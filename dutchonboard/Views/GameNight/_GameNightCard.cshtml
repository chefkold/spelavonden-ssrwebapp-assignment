@model ICollection<GameNight>;

@foreach (var gameNight in @Model)
{
    <div class="col px-5 mb-4">
        <div class="card h-100">
            <img src="~/images/card-placeholder.png" class="card-img-top mx-auto" style="width: 200px" alt="...">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@gameNight.Title</h5>
                <p class="card-text">@gameNight.Description</p>
                <button class="btn btn-primary btn-primary-color mt-auto mx-4">Bekijk</button>
            </div>
        </div>
    </div>
}
