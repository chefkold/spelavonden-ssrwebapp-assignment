@model BoardGame;
@{
    ViewData["Title"] = @Model.Name;
}
<div class="container-fluid">
    <div class="row min-vh-100">
        <div class="col-6 p-4">
            <div class="row">
                <div class="col align-items-center">
                    <h2 class="d-inline m-0">@Model.Name</h2>
                   
                </div>
                <hr />
            </div>
            <div class="row">
                <div class="col-12">
                    <h4>Details</h4>
                    <ul>
                        <li class="pb-3"><img class="list-img" src="~/images/board-game-type-icon.svg" class="me-4" />@Model.Type</li>
                        <li class="pb-3"><img class="list-img" src="~/images/board-game-genre-icon.svg" class="pe-2" />@Model.Genre.ToString()</li>
                    </ul>
                </div>
                <div class="col-12 mt-3">
                    <h4>Beschrijving</h4>
                    <p>
                        @Model.Description
                    </p>
                </div>
                <div class="col-12 mt-5">
                    <a href="javascript:history.go(-1)" class="btn btn-primary btn-primary-color ">Ga terug</a>
                </div>
            </div>
        </div>
        <div class="col-6 p-4">
            <div class="d-flex flex-column h-100">
                <div class="row  justify-content-center flex-grow-1">
                    <div class="col-12 text-center ">
                        <img src="data:@Model.ImageFormat;base64,@Convert.ToBase64String(Model.Image)"  style="object-fit: cover" width="350px" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

